<div class="flex flex-wrap items-start justify-start">
  <% @courses.each do |course| %>
    <div class="relative w-full p-6 border-2 border-blue-700 rounded-lg lg:w-1/4 lg:mr-8">
      <%= image_tag course.thumbnail, :size => "300x300", class: "rounded" if course.thumbnail.present? %>
      <h3 class="mb-2 text-2xl font-bold"><%= course.title %></h3>
      <div class="my-1"><%= truncate(strip_tags(course.description.to_s), length: 140) %></div>
      <p>Donation goal: <%= course.donation_goal %></p>
      <p class="text-sm italic opacity-75">Created by: <%= course.user.name %> </p>
      <%= link_to "View course", course, class: "btn btn-default inline-block text-center my-2" %>
      <% if author_of(course) %>
      <div class="absolute top-0 right-0 mt-2 mr-2">
        <%= link_to edit_course_path(course) do %>
          <svg class="w-6 h-6 text-white opacity-75 fill-current" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><title>edit</title><path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"></path></svg>
        <% end %>
      </div>
      <% end %>
    </div>
  <% end %>
</div>
